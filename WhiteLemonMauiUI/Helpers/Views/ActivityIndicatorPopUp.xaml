<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="WhiteLemonMauiUI.Helpers.Views.ActivityIndicatorPopUp"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    CanBeDismissedByTappingOutsideOfPopup="False"
    Color="Transparent"
    VerticalOptions="Center">

    <Border
        Stroke="LightGrey"
        StrokeThickness="4">
        <Border.StrokeShape>
            <RoundRectangle
                CornerRadius="50" />
        </Border.StrokeShape>
        <ActivityIndicator
            IsRunning="True"
            Color="Purple"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            WidthRequest="60"
            HeightRequest="60" />
    </Border>
</toolkit:Popup>